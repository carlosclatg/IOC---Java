<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

<!-- creacion de la dependencia -->
<bean id="miInforme" class="inversionofcontrol.Informe"> </bean>

<!--Para inyectar la dependencia desde un setter, en el name se pone el setter sin el set y la primera en minuscula-->
<!--el scope es para trabajar con singleton o con prototype, scope=singleton es irrelevante, pq es por defecto-->
<bean id="miSecretarioEmpleado" class="inversionofcontrol.SecretarioEmpleado" scope="prototype">
	<property name="informeNuevo" ref="miInforme"></property>
</bean>

</beans>